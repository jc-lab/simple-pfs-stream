    "@types/node-forge": "^0.9.5",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.2.0",
    "eslint": "^7.16.0",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "commons-crypto": "^0.1.8",
